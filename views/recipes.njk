{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/recipes.css">

    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}

<section class="most-recipes">

    {% for item in items %}

        <div class="recipes-detail" id="{{ loop.index -1}}">
            <img src="{{item.image}}" alt="{{item.title}}">
            <h4>{{item.title}}</h4>
            <p>{{item.author}}</p>
        </div>

    {% endfor %}

</section>

<footer>
    <p>Todos os direitos reservados, receitas Foodfy.</p>
</footer>

{% endblock %}